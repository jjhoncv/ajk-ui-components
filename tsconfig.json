{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types/*.d.ts"]
  },
  "include": ["apps/**/*", "packages/**/**/*", "./types/*.d.ts"]
}
